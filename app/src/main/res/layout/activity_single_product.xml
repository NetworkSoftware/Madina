<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/product_card"
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="0.5dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#ECEBEB"
                app:cardCornerRadius="5dp"
                android:layout_marginBottom="5dp"
                android:elevation="3dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mobile" />


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/sans_bold"
                        android:text="Product Name"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="15dp" />



                    <TextView
                        android:id="@+id/brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:maxLines="2"
                        android:fontFamily="@font/sans"
                        android:text="Product Descrpition"
                        android:textColor="@color/gray"
                        android:textSize="12dp" />
                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/sans"
                        android:text="Rs. 5500"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/cart"
                        android:layout_width="35dp"
                        android:layout_height="31dp"
                        android:layout_gravity="center|top"
                        android:layout_margin="5dp"
                        android:gravity="right">

                        <com.like.LikeButton
                            android:id="@+id/wish_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:anim_scale_factor="2"
                            app:icon_size="20dp"
                            app:icon_type="heart"
                            app:is_enabled="true"
                            app:like_drawable="@drawable/ic_baseline_favorite_24"
                            app:liked="false"
                            app:unlike_drawable="@drawable/ic_baseline_favorite_border_24" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/createdon"
                        android:layout_width="55dp"
                        android:layout_height="25dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="3dp"
                        android:maxLines="1"
                        android:gravity="center"
                        android:text="TODAY"
                        android:textColor="#636161"
                        android:textSize="10dp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/outOfStock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:visibility="gone"
            android:background="@android:color/darker_gray" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>