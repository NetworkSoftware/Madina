<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll1"
        android:layout_marginBottom="80dp"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/product_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#EFEEEE"
                android:elevation="1dp"
                app:cardCornerRadius="1dp">

                <com.github.chrisbanes.photoview.PhotoView
                    android:id="@+id/product_image"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_gravity="center"
                    android:src="@drawable/mobile" />

                <FrameLayout
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/cricle_trans_back">

                    <ImageView
                        android:id="@+id/cartImg"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="5dp"
                        android:gravity="start"
                        android:src="@drawable/ic_outline_shopping_bag_24"
                        android:text="Basket"
                        app:tint="#6C6B6B" />

                    <TextView
                        android:id="@+id/cartImgBadge"
                        android:layout_width="17dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center|left"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/badge"
                        android:backgroundTint="@color/colorAccent"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        tools:text="11" />
                </FrameLayout>
                <LinearLayout
                    android:id="@+id/share"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/cricle_trans_back"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_outline_share_24" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/back"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="top|start"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/cricle_trans_back"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_round_arrow_back_24"
                        app:tint="@color/black" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/sans_bold"
                        android:gravity="left"
                        android:text="Product Name"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="normal" />
                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/sans"
                        android:gravity="left"
                        android:text="Rs. 5,500"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/product_descrpition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/sans"
                        android:gravity="left"
                        android:text="The phone color is Multi"
                        android:textColor="@color/gray"
                        android:textSize="14dp"
                        android:textStyle="normal" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center|top"
                    android:layout_margin="5dp"
                    android:gravity="center">

                    <com.like.LikeButton
                        android:id="@+id/wish_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:anim_scale_factor="2"
                        app:icon_size="20dp"
                        app:icon_type="heart"
                        app:is_enabled="true"
                        app:like_drawable="@drawable/ic_baseline_favorite_24"
                        app:liked="false"
                        app:unlike_drawable="@drawable/ic_baseline_favorite_border_24" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="5dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/call"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/sans_bold"
                android:text="Contact"
                android:textColor="#03A9F4"
                android:textSize="14dp"
                android:visibility="visible"
                app:icon="@drawable/ic_baseline_local_phone_24"
                app:iconTint="#03A9F4" />

            <Button
                android:id="@+id/cart"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/sans_bold"
                android:text="Add to Bag"
                android:textColor="#fff"
                android:textSize="14dp"
                android:visibility="visible"
                app:icon="@drawable/ic_baseline_shopping_bag_24"
                app:iconTint="#fff" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>